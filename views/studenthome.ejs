<!DOCTYPE html>
<html>
<head>
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <title>
        <%= title %>
    </title>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>
<header>
    <%- include("header.ejs") %>
    <div class="flex justify-end">
        <a href="/signout" class="text-lg mt-25 font-semibold bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded mt-4 mb-4">signout</a>
    </div>
</header>
<body class="bg-gray-100">
    <div class="flex justify-end">
        <a href="/signout" class="text-lg mt-25 font-semibold bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded mt-4 mb-4">signout</a>
    </div>
    <div class="container mx-auto mt-8">
        <h1 class="text-3xl text-gray-800 mb-4">Student Homepage</h1>
        <h1 class="text-center py-4 text-3xl font-bold ">Welcome to learning  <%= userName %></h1>
            <div class="text-center py-4 " >
                <% if(messages && messages.success && messages.success.length > 0)  { %>
                    <% for(var i=0; i<messages.success.length; i++) { %>
                        <p class="rounded-full border-2 p-2 bg-gray-600 text-center py-4 text-white"> <%= messages.success[i] %></p>
                    <% } %>
                  <% } %>
                  
                <% if(messages && messages.error && messages.error.length > 0)  { %>
                    <% for(var i=0; i<messages.error.length; i++) { %>
                        <p class="rounded-full border-2 p-2 bg-gray-600 text-center py-4 text-white"> <%= messages.error[i] %></p>
                    <% } %>
                  <% } %>
            </div>
        <h3 class="text-2xl text-gray-800 ">Student Menu</h3>
        <div class="w-96 bg-gradient-to-r from-yellow-500 to-red-500 p-2 mt-4 rounded-lg text-center text-white hover:from-yellow-700 hover:to-red-700 transition duration-300">
            <a href="/changepass" class="text-lg font-semibold">Change Password</a>
        </div>
        <br>
        <h3 class="text-2xl font-bold text-gray-800 ">Enrolled Courses</h3>
        <%- include("display.ejs", { courses: courses, chapters: chapters, pages: pages }) %>
    </div>
    <footer>
        <%- include('footer.ejs') %>
    </footer>
</body>
</html>
