<div class="mt-6">
    <h2 class="text-2xl font-semibold text-gray-800">Created Chapters</h2>
    <ul>
        <% chapters.forEach(chapter => { %>
            <li class="border border-gray-300 p-4 mt-2 flex items-center justify-between">
                <div>
                    <p class="text-lg font-semibold"><%= chapter.title %></p>
                    <p><%= chapter.description %></p>
                </div>
                <div>
                    <a href="/edit-chapter?chapterId=<%= chapter.id %>" class="text-blue-500 font-bold mr-2">Edit</a>
                    <a href="/create-page?chapterId=<%= chapter.id %>" class="text-green-500 font-bold">Add Page</a>
                </div>
            </li>
        <% }); %>
    </ul>
</div>