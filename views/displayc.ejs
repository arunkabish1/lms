<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <title>Course Progress</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>

<body class="font-sans bg-gray-100">
    <header>
        <%- include("header.ejs") %>
    </header>
    <div class="flex justify-end gap-1">
        <a href="/signout"
            class="text-lg mt-25 font-semibold bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded my-24 mb-4">signout</a>
        <a href="/studenthome"
            class="text-lg mt-25 font-semibold bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded my-24 mb-4">Back
            to Home</a>
    </div>
    <div class="container mx-auto my-35 p-8 bg-white shadow-lg">

        <h1 class="text-3xl mb-4 font-bold text-center">Your Enrolled Courses</h1>
        <br>
        <div class="p-4 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-5">
            <% currentUserCourses.forEach(function(course) { %>
                <% enrolledCourses.forEach(function(enrolledCourse) { %>
                    <% if (enrolledCourse.userId===currentUser && enrolledCourse.courseId===course.id) { %>
                        <div
                            class="bg-gray-200 p-4 rounded shadow-lg hover:shadow-lg transition duration-300 ease-in-out mb-4 cursor-pointer">
                            <h2 class="text-lg font-bold mb-2">Course: <%= course.title %>
                            </h2>
                            <p class="text-gray-700">Educator: <%= course.educator %>
                            </p>
                            <p class="text-gray-700">
                                <%= course.description %>
                            </p>
                            <div class="flex justify-between mt-4">
                                <a class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
                                    href="/progress/<%= course.id %>"> View Course Status</a>
                            </div>
                        </div>
                        <% } %>
                            <% }); %>
                                <% }); %>
        </div>
    </div>
    </div>
    <footer>
        <%- include("footer.ejs") %>
    </footer>
</body>

</html>